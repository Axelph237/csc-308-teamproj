{
  "compilerOptions": {
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "jsx": "react-jsx",
    // or "react-jsx" if using React 17 or later
    "esModuleInterop": true,
    // Enable esModuleInterop for easier import handling
    "module": "esnext",
    // or another appropriate module system for your project
    "target": "esnext",
    "moduleResolution": "bundler",
    // or "es6" based on your needs
    "types": [
      "jest"
    ]
  },
  "references": [
    {
      "path": "../types"
    }
  ],
  "include": [
    "src",
    "vite-env.d.ts"
  ]
}

